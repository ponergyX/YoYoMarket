<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y163">
    <ImageView
        android:id="@+id/good_image_iv"
        android:src="@color/gray8"
        android:layout_marginTop="@dimen/y15"
        android:layout_marginLeft="@dimen/x14"
        android:layout_width="@dimen/x136"
        android:layout_height="@dimen/y130" />
    <TextView
        android:id="@+id/good_name_tv"
        android:text="苹果"
        android:textColor="@color/black"
        android:textSize="@dimen/y23"
        android:layout_toRightOf="@id/good_image_iv"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginLeft="@dimen/x22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sale_count_tv"
        android:text="月售23"
        android:textColor="@color/gray"
        android:textSize="@dimen/y20"
        android:layout_alignLeft="@id/good_name_tv"
        android:layout_below="@id/good_name_tv"
        android:layout_marginTop="@dimen/y5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/price_tv"
        android:text="￥12/份"
        android:textColor="@color/app_color"
        android:textSize="@dimen/y23"
        android:layout_alignLeft="@id/good_name_tv"
        android:layout_below="@id/sale_count_tv"
        android:layout_marginTop="@dimen/x22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x25"
        android:layout_marginBottom="@dimen/y17"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/reduce_iv"
            android:src="@drawable/ic_good_reduce"
            android:padding="@dimen/x10"
            android:visibility="invisible"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70" />
        <TextView
            android:id="@+id/buy_count_tv"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="@dimen/x26"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:minWidth="@dimen/x40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/add_iv"
            android:src="@drawable/ic_add"
            android:padding="@dimen/x10"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70" />
    </LinearLayout>

</RelativeLayout>