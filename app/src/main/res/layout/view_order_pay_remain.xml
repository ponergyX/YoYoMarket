<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/remain_ll"
    android:layout_below="@+id/toolbar"
    android:background="@color/orange1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y67"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:src="@drawable/horn_ic"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x31"
        android:layout_width="@dimen/x38"
        android:layout_height="@dimen/y31" />
    <TextView
        android:id="@+id/order_pay_remain_tv"
        android:text="@string/order_pay_remain"
        android:textColor="@color/white"
        android:textSize="@dimen/y24"
        android:layout_marginLeft="@dimen/x11"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>