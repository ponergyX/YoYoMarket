<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/y148"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/good_image_iv"
        android:src="@color/gray1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x31"
        android:layout_width="@dimen/x115"
        android:layout_height="@dimen/x115" />
    <TextView
        android:id="@+id/good_name_tv"
        android:text="苹果"
        android:textSize="@dimen/y24"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/good_image_iv"
        android:layout_marginLeft="@dimen/x28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/good_price_tv"
        android:text="￥5.8"
        android:textSize="@dimen/y24"
        android:textColor="@color/app_color"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/good_num_tv"
        android:text="X1"
        android:textSize="@dimen/y24"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/good_price_tv"
        android:layout_marginRight="@dimen/x146"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@color/gray2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2" />
</RelativeLayout>